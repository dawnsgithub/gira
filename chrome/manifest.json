{
  "manifest_version": 2,
  "name": "GIRA",
  "version": "0.0.4",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action":
  {
    "default_icon" : "assets/icon-60@2x.png",
    "default_title" : "GIRA"
  },
  "permissions": [
    "declarativeContent",
    "https://api.github.com/*",
		"storage",
		"http://query.yahooapis.com/*"
  ],
  "description": "Github Issues Realy Awesome",

  "author": "Ouyang Jichao",
  "icons": {
    "16": "assets/icon-60@2x.png",
    "128": "assets/icon-60@3x.png"
  },
	"content_scripts": [
	    {
	      "matches": ["https://github.com/*/*/issues", "http://getgira.github.io/*"],
	      "js": ["gira.js"],
				"css": ["gira.css"]
	    }
	  ]
}
